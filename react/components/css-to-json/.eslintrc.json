{
    "rules": {
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "eqeqeq": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            2
        ],
        "no-console": "warn",
        "semi": [
            "error",
            "always"
        ],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "react/display-name": "error"
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ]
}
